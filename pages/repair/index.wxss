/* 表格代码   */
.table{
  border:2rpx solid #F7F7F7;
  border-bottom: 0;
  margin-bottom: 20rpx;
  border-radius: 5rpx;
  overflow: hidden;
}
.tr{
  width:100%;
  display: flex;
  justify-content: space-between;
}
.th,.td{
  padding: 20rpx;
  border-bottom: 1px solid #F7F7F7;
  border-right: 1px solid #F7F7F7;
  /* text-align: center; */
  width: 100%;
}
.th1,.td1{
  width: 70%;
}
.th2,.td2{
  width: 30%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.th{
  font-weight: 800;
