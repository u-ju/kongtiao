padding: 24rpx;
}
.add-image, .up-pic image {
  margin-top: 2%;
  margin-left: 2%;
  color: #ddd;
  line-height: 95%;
  text-align: center;
  cursor: pointer;
  border-radius: 10rpx;
}

.picture_list {
  /* padding: 20rpx;
  margin-left: 12%; */
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-items: flex-start;
  align-content: flex-start;
  margin: 0 -20rpx;
}

.picture_item {
  margin: 50rpx 20rpx 28rpx 20rpx;
  position: relative;
  width: 134rpx;
  height: 134rpx;
}

.picture_item .del {
  position: absolute;
  top: 0;
  right: 0;
  color: #fff;
  border-radius: 50%;
  width: 30rpx;
  height: 30rpx;
  z-index: 2;
  line-height: 35rpx;
  text-align: center;
  /* background-color: #f00; */
}
.picture_item .del image{
  width: 100%;
  height: 100%;
}
.upload_progress {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  border-radius: 8rpx;
  background-color: #000;
  color: #fff;
  width: 134rpx;
  height: 134rpx;
  text-align: center;
  line-height: 134rpx;
  font-size: 12px;
}

.picture_item image {
  width: 134rpx;
  height: 134rpx;
}
